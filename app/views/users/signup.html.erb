<!-- Start of Body -->
<div class="log-in-container">
<div class="log-in-title-container">
    <h1>Sign Up to Bnb169</h1>
</div>
<%= form_with url: signup_path, method: :post, id: "sign-up-form" do |form| %>
<div class="form-floating mb-3">
  <%= form.text_field :first_name, class: "form-control", id: "login-first-name-field", placeholder: "John"%>
  <label for="login-first-name-field"><strong>First name</strong></label>
</div>
<div class="form-floating mb-3">
  <%= form.text_field :last_name, class: "form-control", id: "login-last-name-field", placeholder: "Doe"%>
  <label for="login-first-name-field"><strong>Last name</strong></label>
</div>
<div class="form-floating mb-3">
  <%= form.text_field :email, class: "form-control", type: "email", id: "login-email-field", placeholder: "name@example.com"%>
  <label for="login-email-field"><strong>Email address</strong></label>
</div>
<div class="form-floating mb-3">
  <%= form.text_field :password, class: "form-control", id: "login-password-field", placeholder: "password"%>
  <label for="login-password-field"><strong>Password</strong></label>
</div>
<div class="form-floating">
    <%= form.submit "Log In", class: "login-btn btn btn-primary btn-lg w-100"%>
</div>
<% end %>
</div>
<!-- End of Body -->
<!-- Footer -->
<%= render "layouts/footer" %>
<%= javascript_pack_tag 'users'%>
